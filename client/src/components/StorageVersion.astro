      localStorage.setItem("savedEditorBACKUP.purple", localStorage.getItem("savedEditor.purple")!!);
    }

    localStorage.removeItem("savedEditor.salesian");
    localStorage.removeItem("savedEditor.hotdog");
    localStorage.removeItem("savedEditor.purple");
  }
  localStorage.setItem('storageVersion', "1.0");
</script>
<script>
  const storageVersion = localStorage.getItem('storageVersion') || "0.0";
  
  if (storageVersion !== "1.0") {
    if (localStorage.getItem("savedEditor.salesian") !== null) {
      localStorage.setItem("savedEditorBACKUP.salesian", localStorage.getItem("savedEditor.salesian")!!);
    }
    if (localStorage.getItem("savedEditor.hotdog") !== null) {
      localStorage.setItem("savedEditorBACKUP.hotdog", localStorage.getItem("savedEditor.hotdog")!!);
    }
